<Window x:Class="ContactList.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ContactList"
        mc:Ignorable="d"
        Title="LoginWindow" Height="300" Width="400">
    <Grid>
        <StackPanel Margin="10">
            <Label Margin="-5" Content="Login:" x:Name="loginLabel" FontSize="10" />
            <TextBox  x:Name="loginTextBox" />
            <Label Margin="-5" Content="Password:" x:Name="passwordLabel" FontSize="10" />
            <TextBox  x:Name="passwordTextBox" />
            <Button Margin="0 5" Content="Login" Click="Button_Click" Background="red" Foreground="White"/>
        </StackPanel>
    </Grid>
</Window>
