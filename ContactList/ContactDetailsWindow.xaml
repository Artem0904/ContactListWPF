<Window x:Class="ContactList.ContactDetailsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ContactList"
        mc:Ignorable="d"
        Title="ContactDetailsWindow" Height="200" Width="400">
    <Grid>
        <StackPanel Margin="10">
            <Label Margin="-5" Content="Name:" x:Name="nameLabel" FontSize="10" />
            <TextBox  x:Name="nameTextBox" />
            <Label Margin="-5" Content="Email:" x:Name="emailLabel" FontSize="10" />
            <TextBox  x:Name="emailTextBox" />
            <Label Margin="-5" Content="Phone:" x:Name="phonelLabel" FontSize="10" />
            <TextBox Margin="0,0,0,5" x:Name="phoneTextBox" />
            <Button Content="Update" Name="UpdateBtn" Margin="0,0,0,5" Click="UpdateBtn_Click" />
            <Button Content="Delete" Name="DeleteBtn" Margin="0,0,0,5" Background="red" Foreground="White" Click="DeleteBtn_Click" />
        </StackPanel>
        
    </Grid>
</Window>
